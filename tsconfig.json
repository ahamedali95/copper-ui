{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "isolatedModules": true,
    "jsx": "react",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "ts-output",
    "moduleResolution": "node",
    "module": "esnext",
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/__tests__",
    "src/__mocks__"
  ]
}
